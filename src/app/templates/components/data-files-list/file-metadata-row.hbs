{{!-- infinite colspan --}}
<td colspan="999">
  {{#if isLoading}}
    <div class="spinner-container spinner-64 spinner-centered">
      {{spin-spinner scale=0.5 lines=12 length=20 width=10}}
    </div>
  {{else}}
    {{metadata-panel metadataProxy=file.fileProperty
      readOnly=readOnly
      closeMetadataPanel='closeMetadataEditor'
      removeMetadata='removeMetadata'}}
  {{/if}}
</td>
