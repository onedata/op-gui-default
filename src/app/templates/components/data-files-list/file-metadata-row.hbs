{{!-- infinite colspan --}}
<td colspan="999">
  {{#if isLoading}}
    <div class="spinner-container spinner-64 spinner-centered">
      {{spin-spinner scale=0.5 lines=12 length=20 width=10}}
    </div>
  {{else if metadataError}}
    {{resource-load-error reason=metadataError}}
  {{else}}
    {{metadata-panel
      metadataProxy=metadataProxy
      readOnly=readOnly
      closeMetadataPanel=(action "closeMetadataEditor")
      removeMetadata=(action "removeMetadata")
    }}
  {{/if}}
</td>
