<div class="dropdown">
  <a href="#" class="dropdown-toggle secondary-sidebar-item secondary-sidebar-header single-selectable dropdown-select-icon"
    data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
    <div class="item-icon">
      {{one-icon icon=(if selectedSpace.isDefault 'space-home' 'space')}}
    </div>
    <div class="item-label" title="{{selectedSpace.name}}">
      <div class="truncate truncate-secondary-sidebar-select">
        {{#if isLoading}}
          ...
        {{else}}
          {{selectedSpace.name}}
        {{/if}}
      </div>
    </div>
    <div class="item-icon select-arrow">
      {{one-icon icon='arrow-down'}}
    </div>
  </a>
  <ul class="dropdown-menu dropdown-menu-down expand-left dropdown-menu-list dropdown-sidebar-select">
    {{#each spacesSorted as |s|}}
      <li>
        <a href="#" {{action 'setSelectedSpace' s}}>
          <div class="item-icon">
            {{one-icon icon=(if s.isDefault 'space-home' 'space')}}
          </div>
          <div class="item-label">
            <div class="truncate truncate-drop">
              {{s.name}}
            </div>
          </div>
        </a>
      </li>
    {{/each}}
  </ul>
</div>
