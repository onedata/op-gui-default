{{#if isRenderFailed}}
  {{!-- TODO: translate --}}
  <em>Chunks map creation failed</em>
{{else}}
  {{#if isLoading}}
    <div class="one-row">
      <div class="loading-throbber"></div>
      <div class="loading-label">
        Loading file chunks map...
      </div>
    </div>
  {{else}}
    <canvas id="file-chunks-{{file.id}}"
      class="file-chunks {{if isLoading "loading"}} {{if isRenderFailed "error"}} {{if isRendered "rendered"}}"></canvas>
    {{#unless (eq chunksPercent undefined)}}
      <div class="blocks-percent-indicator">
        {{chunksPercent}}
      </div>
    {{/unless}}
    <div class="file-size">
      <div class="start">
        0
      </div>
      <div class="end">
        {{file.sizeHumanReadable}}
      </div>
    </div>
  {{/if}}
{{/if}}
