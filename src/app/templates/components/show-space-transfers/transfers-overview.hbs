<div class="row row-active-transfers {{if stickyOverview "sticky"}}" style={{stickyOverviewStyle}}>
  <div class="row row-overview">
    <div class="col-xs-12 col-md-7 col-providers-map map-column">
      <h2>
        {{t "components.transfers.providersMapOfDist"}}
      </h2>
      <div class="row loadable-row">
        {{transfers/providers-map
          providers=providers
          providerTransferConnections=providerTransferConnections
          destinationProviderIds=destinationProviderIds
          sourceProviderIds=sourceProviderIds
          providersColors=providersColors
        }}
      </div>
    </div>
    
    <div class="col-xs-12 col-md-5 col-throughput-pie-chart">
      <h2><span class="one-label">{{t "components.transfers.throughputDistribution"}}</span>
        {{#if providerTransfers.length}}
          {{#bs-button-group
            value=transfersPieChartDirection
            type="radio"
            size="sm"
            class="space-transfers-throughput-direction pull-right"
          }}
            {{#bs-button value="out"}}{{t "components.transfers.out"}}{{/bs-button}}
            {{#bs-button value="in"}}{{t "components.transfers.in"}}{{/bs-button}}
          {{/bs-button-group}}
        {{/if}}
      </h2>
      <div class="row loadable-row">
        {{#if providerTransfers.length}}
          {{#if someTransfersRemote}}
            <p>
              {{t "components.transfers.someTransfersRemote"}}
            </p>
          {{/if}}
          {{transfers/throughput-distribution
            providers=providers
            providersColors=providersColors
            providerTransfers=providerTransfers
            transfersDirection=transfersPieChartDirection
          }}
        {{else if destinationProviderIds.length}}
          <p>{{t "components.transfers.initializingTransfers"}}</p>
        {{else}}
          <p>{{t "components.transfers.noActiveTransfers"}}</p>
        {{/if}}
        {{#if throughputChartError}}
          {{#error-inline}}
            {{t "components.transfers.throughputChartError"}}
          {{/error-inline}}
        {{/if}}
      </div>
    </div>
  </div>
  
  <div class="col-xs-12 row-expand-handler" {{action "toggleOverview"}}>
    {{t (concat "components.transfers.transfersOverview." (if overviewExpanded "hide" "show"))}}
  </div>
</div>