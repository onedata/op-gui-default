{{#bs-modal open=open body=false footer=false
    id=modalId
    title=title
    openAction="open"
    closedAction="closed"
    keyboard=(not isLoading)
    autoClose=(not isLoading)
    backdropClose=(not isLoading)
    closeButton=false
  }}
  {{#bs-modal-body}}
    {{status-panel blocking=true type=type message=label}}
    {{yield}}
  {{/bs-modal-body}}
  {{#bs-modal-footer as |footer|}}
    {{#spin-button-onedata buttonType="submit"
      action=(action "confirm")
      class=(concat btnClass " btn no-outline")
      spinnerColor="#fff"
      inFlight=confirmInProgress
      disabled=confirmInProgress
    }}
      {{t "common.modal.yes"}}
    {{/spin-button-onedata}}
    
    {{#spin-button-onedata buttonType="submit"
      action=(action "cancel")
      class="btn-default btn no-outline"
      spinnerColor="#fff"
      inFlight=cancelInProgress
      disabled=cancelInProgress
    }}
      {{t "common.modal.no"}}
    {{/spin-button-onedata}}
  {{/bs-modal-footer}}
{{/bs-modal}}
